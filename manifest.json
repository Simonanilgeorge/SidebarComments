{
    "manifest_version": 3,
    "name": "youtube comments",
    "version": "1.0",
    "description": "Add overflow auto to youtube comments",
  
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "background":{
      "service_worker":"background.js"
    },
    "content_scripts": [
      {
        "js": [
          "content.js"
        ],
        "css":["style.css"],
        "matches": ["https://www.youtube.com/watch?v=*","https://www.youtube.com/*", "https://youtube.com/*"]
      }
    ]
  }
  